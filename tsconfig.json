{
  "compilerOptions": {
    "strict": false,
    "target": "esNext",
    "module": "esNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "importHelpers": false,
    "lib": ["es2017", "dom", "dom.iterable", "scripthost"],
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "functions/**/*",
    "lambda.type.ts"
  ],
  "exclude": [
    "**/__tests__/**/*",
    "**/*.spec.*",
    "**/build/**",
    "**/dist/**",
    "**/*.stories.*"
  ]
}
